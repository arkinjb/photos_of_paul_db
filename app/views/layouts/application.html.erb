<!DOCTYPE html>
<html>
<head>
  <title>Photos Of Paul Club</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <header>
        <h1><%= link_to "Photos of Paul", root_url %></h1>
        <nav>
          <% if signed_in? %>
            <%= link_to "Upload", new_photo_path %>
            <%= link_to "Profile", current_user %>
            <%= link_to "Sign Out", signout_path, method: :delete %>
          <% else %>
            <%= link_to "Sign In", signin_path %>
            <%= link_to "Sign Up", signup_path %>
          <% end %>
        </nav>

        <%= form_tag(photos_path, :method => "get", id: "search-form") do %>
          <%= text_field_tag :search, params[:search], placeholder: "Search Photos" %>
          <%= submit_tag "Search", :name => nil %>
        <% end %>
          <%= button_to "Clear", photos_path, :method => "get" %>
    </header>

<%= yield %>

</body>
</html>
