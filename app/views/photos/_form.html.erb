

<%= form_for(@photo, multipart: true) do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :photo_url %>
  <%= f.text_field :photo_url %>

  <%= f.label :image %>
  <%= f.file_field :image %>

  <% if @photo.new_record? %>
    <%= f.submit "Upload Photo" %>
  <% else %>
    <%= f.submit "Edit Photo" %>
  <% end %>

<% end %>
